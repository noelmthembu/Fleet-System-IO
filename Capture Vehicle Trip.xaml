        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fleet.io_cx_system"
        mc:Ignorable="d"
        Title="Capture_Vehicle_Trip" Height="398.667" Width="390">
    <Grid>
        <Label Content="Vehicle Name" HorizontalAlignment="Left" Margin="35,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.569,1.577" FontWeight="Bold" FontFamily="Calibri" FontSize="14"/>
